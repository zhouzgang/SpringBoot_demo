<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!--你接口的包名是com.abc.dao,接口名是NameMapper.java，那么你的mapper.xml的namespace应该是com.abc.dao.NameMapper-->
<mapper namespace="cn.ecomb.support.dao.StudentTestMapper" >

    <!--resultMap对应的是表与实体类的映射  - type 数据库表对应的实体类，别名或完整类名都可以-->
    <resultMap id="StudentMap" type="cn.ecomb.support.entity.StudentTest" >
        <!-- 结果集的主键 -->
        <id column="sno" property="sno" jdbcType="VARCHAR" />
        <!-- 普通的列  -column 是数据库中字段， property是实体类中字段-->
        <result column="sname" property="sname" jdbcType="VARCHAR" />
        <result column="pinyin" property="pinyin" jdbcType="VARCHAR" />
        <result column="ssex" property="ssex" jdbcType="VARCHAR" />
        <!--<result column="sbirthday" property="sbirthday" jdbcType="DATETIME" />-->
    </resultMap>


    <!--parameterType(输入类型)、resultType(输出类型)-->
    <select id="getStudentById" parameterType="String" resultMap="StudentMap" resultType="cn.ecomb.support.entity.StudentTest">

        SELECT * FROM students WHERE sno = #{sno,jdbcType=VARCHAR}
    </select>

</mapper>